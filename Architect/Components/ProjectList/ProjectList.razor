@using Architect.Models
@namespace Architect.Components

    <MudGrid>

        @if (_projects.Any())
        {
            @foreach (Project project in _projects)
            {
                <MudItem @onclick="() => NavigateToProjectFiles(project.Id)">
                    <MudCard Elevation="2">
                        <MudCardContent>
                            <MudText Typo="Typo.h5">@project.Name</MudText>
                            <MudText Typo="Typo.caption">@project.Description</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        }
        else
        {
            <MudContainer>
            <MudText>You have no projects</MudText>
            <MudIconButton Color="Color.Primary" Icon="Icons.">New Project</MudIconButton>
        </MudContainer>
        }
    </MudGrid>